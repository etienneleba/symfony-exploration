{% extends "base.html.twig" %}


{% block body %}
    {% for room in rooms %}
        <p>
            <div>
                {{ room.name }} :
                {% if room.isFree %}
                    <a href="{{ path('book_the_room', {roomId: room.id}) }}">Book the room</a>
                {% else %}
                    <a href="{{ path('unbook_the_room', {roomId: room.id}) }}">Unbook the room</a>
                {% endif %}
            </div>
        </p>
    {% endfor %}
{% endblock %}
